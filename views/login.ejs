<% layout = 'layout'; %> <!-- Define the layout explicitly -->

<form action="/login" method="POST" class="card p-4 shadow-sm mx-auto" style="max-width: 400px;">
  <% if (typeof error !== 'undefined' && error) { %>
    <div id="error-message" class="alert alert-danger error-message" role="alert">
      <%= error %>
    </div>
  <% } %>
  <div class="mb-3">
    <label class="form-label">Username</label>
    <input type="text" name="username" class="form-control" required />
  </div>
  <div class="mb-3">
    <label class="form-label">Password</label>
    <input type="password" name="password" class="form-control" required />
  </div>
  <button type="submit" class="btn btn-success w-100">Login</button>
  <button type="reset" class="btn btn-secondary w-100 mt-2">Reset</button>
</form>